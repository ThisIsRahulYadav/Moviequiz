<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="moviequiz.rauniyargames.com.moviequiz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.rauniyargames.moviequiz.gameclasses.HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.rauniyargames.moviequiz.gameclasses.Levels" />
        <activity android:name="com.rauniyargames.moviequiz.gameclasses.EmojiGameScreen"></activity>


        <service android:name="com.rauniyargames.moviequiz.helperclasses.BackgroundSoundService"
            android:enabled="true" />

    </application>

</manifest>